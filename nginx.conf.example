# Пример конфигурации Nginx для Nedra Expert Node
# Скопируйте этот файл в /etc/nginx/sites-available/nedra-expert
# и создайте символическую ссылку: ln -s /etc/nginx/sites-available/nedra-expert /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name your-domain.com;  # Замените на ваш домен или IP-адрес
    
    # Корневая директория со статическими файлами
    root /var/www/nedra-expert/dist;  # Замените на путь к вашей папке dist
    index index.html;
    
    # Логи
    access_log /var/log/nginx/nedra-expert-access.log;
    error_log /var/log/nginx/nedra-expert-error.log;
    
    # Сжатие для улучшения производительности
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/json application/javascript;

    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;
    
    # Статические файлы фронтенда
    location / {
        try_files $uri $uri/ /index.html;
        
        # Кэширование статических ресурсов
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }
    
    # Проксирование API-запросов к backend
    location /api/login {
        proxy_pass http://localhost:4004/login;
        include proxy_params;
    }

    location /api/users/ {
        rewrite ^/api/(.*)$ /$1 break;
        proxy_pass http://localhost:4004;
        include proxy_params;
    }

    location /api/graphs/ {
        rewrite ^/api/(.*)$ /$1 break;
        proxy_pass http://localhost:4001;
        include proxy_params;
    }

    location /api/initiatives/ {
        rewrite ^/api/(.*)$ /$1 break;
        proxy_pass http://localhost:4002;
        include proxy_params;
    }

    location /api/employees/ {
        rewrite ^/api/(.*)$ /$1 break;
        proxy_pass http://localhost:4003;
        include proxy_params;
    }

    location /api/assignments/ {
        rewrite ^/api/(.*)$ /$1 break;
        proxy_pass http://localhost:4003;
        include proxy_params;
    }
}

